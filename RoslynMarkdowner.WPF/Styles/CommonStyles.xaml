<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:RoslynMarkdowner.WPF.Styles">

    <Style x:Key="ToolButtonText" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="3 0 0 0" />
    </Style>

    <Style x:Key="ToolButtonIcon" TargetType="{x:Type Image}">
        <Setter Property="Height" Value="16" />
    </Style>

    <Style x:Key="TreeItemText" TargetType="{x:Type TextBlock}">
    </Style>

    <Style x:Key="TreeItemCheck" TargetType="{x:Type CheckBox}">
        <Setter Property="Margin" Value="0 0 2 0" />
    </Style>

</ResourceDictionary>